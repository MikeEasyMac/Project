<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Campus CoPilot</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-light border-bottom">
      <div class="container">
        <a class="navbar-brand fw-bold" href="/">Campus CoPilot</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <div class="navbar-nav me-auto">
            <% if (typeof user !== 'undefined' && user) { %>
              <a class="nav-link" href="/">Dashboard</a>
              <a class="nav-link" href="/courses">Courses</a>
              <a class="nav-link" href="/my-courses">My Courses</a>
              <a class="nav-link" href="/study-sessions">My Study Sessions</a>

              <% 
                // CRITICAL FIX: Hide these student-focused links from Tutors
                if (user.role !== 'tutor') { 
              %>
                <a class="nav-link" href="/tutors">Browse Tutors</a>
                <a class="nav-link" href="/my-tutoring-requests">My Tutoring Requests</a>
              <% } %>
              
              <a class="nav-link" href="/resources">Resources</a>
              <a class="nav-link" href="/qa">Q&A</a>
              
              <% if (user.role === 'admin') { %>
                <a class="nav-link" href="/admin/dashboard">Admin Dashboard</a>
                <a class="nav-link" href="/users">Users</a>
              <% } %>

              <% if (user.role === 'admin' || user.role === 'tutor') { %>
                <a class="nav-link" href="/tutor">Tutor Dashboard</a>
              <% } %>
              
            <% } %>
          </div>
          <div class="navbar-nav">
            <% if (typeof user !== 'undefined' && user) { %>
              <span class="navbar-text me-2">Welcome, <%= user.name %></span>
              <a class="nav-link position-relative" href="/notifications">
                Notifications
                <% if (typeof unreadNotificationsCount !== 'undefined' && unreadNotificationsCount > 0) { %>
                  <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    <%= unreadNotificationsCount %>
                    <span class="visually-hidden">unread messages</span>
                  </span>
                <% } %>
              </a>
              <a class="nav-link" href="/profile">My Profile</a>
              <a class="nav-link" href="/logout">Logout</a>
            <% } else { %>
              <a class="nav-link" href="/login">Login</a>
              <a class="nav-link" href="/signup">Sign Up</a>
            <% } %>
          </div>
        </div>
      </div>
    </nav>
    <main class="container py-4">
      <% 
        
        if (typeof mainTemplate !== 'undefined') { 
      %>
        <%- include(mainTemplate + '.ejs') %>
      <% 
        
        } else if (typeof body !== 'undefined') { 
      %>
        <%- body %>
      <% } %>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
