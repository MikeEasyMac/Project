<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign Up - Campus CoPilot</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
  </head>
  <body class="d-flex align-items-center justify-content-center vh-100">
    
    <div class="card border-0 shadow-lg" style="width: 100%; max-width: 500px;">
        <div class="card-body p-5">
            <h2 class="fw-bold text-dark text-center mb-4">Join Campus CoPilot</h2>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger text-center fw-bold mt-3 mb-4" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i> <%= error %>
                </div>
            <% } %>
            
            <form action="/signup" method="POST">
                
                <div class="mb-4 text-center">
                    <label class="form-label fw-bold text-dark d-block mb-2">Register as...</label>
                    <div class="btn-group w-100" role="group">
                        <input type="radio" class="btn-check" name="role" id="roleStudent" value="student" checked onchange="toggleTutorFields()">
                        <label class="btn btn-outline-primary fw-bold" for="roleStudent">Student</label>
        
                        <input type="radio" class="btn-check" name="role" id="roleTutor" value="tutor" onchange="toggleTutorFields()">
                        <label class="btn btn-outline-primary fw-bold" for="roleTutor">Tutor</label>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold text-dark">Full Name</label>
                    <input type="text" name="name" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold text-dark">Email Address</label>
                    <input type="email" name="email" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold text-dark">Password</label>
                    <input type="password" name="password" class="form-control" required>
                </div>

                <div id="tutorFields" class="d-none p-3 bg-light rounded mb-3 border">
                    <h6 class="fw-bold text-primary mb-3">Tutor Application</h6>
                    
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-dark">Course Code or Title you wish to teach</label>
                        <input type="text" 
                               name="preferred_course_title" 
                               class="form-control" 
                               placeholder="e.g., MATH101 or Calculus I" 
                               required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label small fw-bold text-dark">Bio / Experience</label>
                        <textarea name="bio" class="form-control" rows="2" placeholder="Describe your experience..."></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-dark">Hourly Rate ($)</label>
                        <input type="number" name="hourly_rate" class="form-control" placeholder="30">
                    </div>
                    
                    <div class="alert alert-warning small mb-0 p-2">
                        <i class="fas fa-clock me-1"></i> Your account will be pending until an Admin approves it.
                    </div>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg fw-bold">Create Account</button>
                </div>
            </form>
            
            <div class="text-center mt-4">
                <a href="/login" class="text-decoration-none">Already have an account? Login</a>
            </div>
        </div>
    </div>

    <script>
        function toggleTutorFields() {
            const isTutor = document.getElementById('roleTutor').checked;
            const fields = document.getElementById('tutorFields');
            const inputs = fields.querySelectorAll('input, textarea');
            
            if (isTutor) {
                fields.classList.remove('d-none');
                // Ensure Tutor fields are required when active
                inputs.forEach(el => el.required = true);
            } else {
                fields.classList.add('d-none');
                // Ensure Tutor fields are NOT required when hidden (CRITICAL FIX)
                inputs.forEach(el => {
                    el.required = false;
                    el.value = ''; 
                });
            }
        }
        
        // Run toggle on load to ensure proper initial state
        document.addEventListener('DOMContentLoaded', toggleTutorFields);
    </script>
  </body>
</html>