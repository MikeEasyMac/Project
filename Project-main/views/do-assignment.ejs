<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <span class="badge bg-primary mb-2"><%= assignment.course_title %></span>
                    <h2 class="fw-bold text-dark mb-0"><%= assignment.title %></h2>
                    <p class="text-muted mt-2">Due: <%= new Date(assignment.due_date).toLocaleString() %></p>
                </div>
                
                <div class="card-body px-4 pb-4">
                    <hr class="text-muted opacity-25">
                    
                    <h5 class="fw-bold text-dark">Instructions:</h5>
                    <div class="p-3 bg-light rounded mb-4 text-dark">
                        <%= assignment.description || "No specific instructions provided." %>
                    </div>

                    <form action="/assignments/<%= assignment.id %>/submit" method="POST">
                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark">Your Answer / Submission</label>
                            <textarea name="submission_text" class="form-control" rows="10" placeholder="Type your answer here..." required></textarea>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/my-assignments" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success fw-bold px-4">Submit Assignment</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>