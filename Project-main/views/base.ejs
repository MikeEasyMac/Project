<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Campus CoPilot</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>
  <body class="<%= user ? 'logged-in' : '' %>">
    <nav class="navbar navbar-expand-lg navbar-dark custom-navbar-blue">
      <div class="container">
        <a class="navbar-brand fw-bold" href="/">
            <% if (user && user.role === 'admin') { %>
                Admin Dashboard
            <% } else { %>
                Campus CoPilot
            <% } %>
        </a>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <div class="navbar-nav me-auto">
            <% if (user) { %>
              
              <% if (user.role === 'student') { %>
                <a class="nav-link" href="/courses">Courses</a>
                <a class="nav-link" href="/my-courses">My Courses</a>
                <a class="nav-link" href="/my-assignments">Assignments</a>
                <a class="nav-link" href="/study-sessions">My Study Sessions</a>
                <a class="nav-link" href="/tutors">Browse Tutors</a>
                <a class="nav-link" href="/my-tutoring-requests">My Tutoring Requests</a>
              <% } %>

              <% if (user.role === 'tutor') { %>
                <a class="nav-link" href="/tutor/dashboard">Dashboard</a>
                <a class="nav-link" href="/tutor/grading">Grading</a>
                <a class="nav-link" href="/tutor/availability">Manage Availability</a>
              <% } %>

              <a class="nav-link" href="/resources">Resources</a>

              <a class="nav-link" href="/qa">Q&A</a>

              <% if (user.role === 'admin') { %>
                 <% } %>

            <% } %>
          </div>
          
          <div class="navbar-nav align-items-center">
            <% if (user) { %>
              
              <a class="nav-link position-relative me-3" href="/notifications">
                <i class="fas fa-bell fs-5"></i>
                <% if (typeof unreadNotificationsCount !== 'undefined' && unreadNotificationsCount > 0) { %>
                  <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.6rem;">
                    <%= unreadNotificationsCount %>
                    <span class="visually-hidden">unread messages</span>
                  </span>
                <% } %>
              </a>

              <a class="nav-link p-0 me-3" href="/profile" title="My Profile">
                <% if (user.avatar) { %>
                  <img src="<%= user.avatar %>" alt="Profile" class="rounded-circle border border-2 border-white" style="width: 40px; height: 40px; object-fit: cover;">
                <% } else { %>
                  <div class="rounded-circle bg-white text-primary d-flex align-items-center justify-content-center fw-bold border border-2 border-white" style="width: 40px; height: 40px;">
                    <%= user.name.charAt(0).toUpperCase() %>
                  </div>
                <% } %>
              </a>

              <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i></a>

            <% } else { %>
              <a class="nav-link" href="/login">Login</a>
              <a class="nav-link" href="/signup">Sign Up</a>
            <% } %>
          </div>
        </div>
      </div>
    </nav>
    <main class="container py-4">
      <%- body %>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>