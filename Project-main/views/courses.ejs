<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="fw-bold text-white">Available Courses</h1>
  </div>

  <% if (typeof flash !== 'undefined' && flash) { %>
      <div class="alert alert-<%= flash.type === 'error' ? 'danger' : 'success' %> alert-dismissible fade show" role="alert">
          <%= flash.message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
  <% } %>

  <div class="row g-4">
      <% if (courses && courses.length > 0) { %>
          <% courses.forEach(function(course) { %>
              <div class="col-md-6 col-lg-4">
                  <div class="card h-100 border-0 shadow-sm">
                      <div class="card-body d-flex flex-column">
                          
                          <div class="d-flex justify-content-between align-items-start mb-2">
                              <div>
                                  <small class="text-muted fw-bold text-uppercase"><%= course.code %></small>
                                  
                                  <h4 class="card-title fw-bold mb-1 text-dark"><%= course.title %></h4>
                              </div>
                              <div class="fs-2 text-primary">
                                  <i class="fas fa-graduation-cap"></i>
                              </div>
                          </div>

                          <div class="mb-3">
                              <p class="mb-0 text-primary fw-semibold">
                                  <i class="fas fa-chalkboard-teacher me-2"></i>
                                  <%= course.professor || 'Instructor TBA' %>
                              </p>
                          </div>
                          
                          <hr class="text-muted opacity-25 my-2">
                          
                          <p class="card-text text-secondary flex-grow-1">
                              Master the core concepts of <%= course.title %> in this comprehensive module.
                          </p>

                          <form action="/courses/<%= course.id %>/enroll" method="POST" class="mt-auto">
                              <button type="submit" class="btn btn-primary w-100 fw-bold">
                                  Enroll Now
                              </button>
                          </form>
                      </div>
                  </div>
              </div>
          <% }); %>
      <% } else { %>
          <div class="col-12 text-center text-white mt-5">
              <div class="display-1 mb-3">ðŸ“­</div>
              <h3>No courses currently available.</h3>
              <p class="opacity-75">Please check back later for new enrollments.</p>
          </div>
      <% } %>
  </div>
</div>