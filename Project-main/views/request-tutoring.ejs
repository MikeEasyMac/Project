<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="text-white fw-bold mb-4 text-center">Request a Tutor</h1>
            
            <div class="card border-0 shadow-lg">
                <div class="card-body p-5">
                    <form action="/tutors/<%= tutor.id %>/request" method="POST">
                        
                        <div class="mb-4 text-center">
                            <h5 class="text-muted text-uppercase small fw-bold">Requesting Session With</h5>
                            <h2 class="text-primary fw-bold mb-0"><%= tutor.name %></h2>
                        </div>
                        
                        <hr class="text-muted opacity-25 my-4">

                        <div class="mb-4">
                            <label for="topic" class="form-label fw-bold text-dark">Subject / Topic</label>
                            <input type="text" name="topic" id="topic" class="form-control form-control-lg" placeholder="What do you need help with?" autocomplete="off" required>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark mb-3">Select Available Time Slot</label>
                            
                            <% if (availability && availability.length > 0) { %>
                                <div class="d-grid gap-2" id="slot-container">
                                    <% availability.forEach(function(slot) { %>
                                        <input type="radio" class="btn-check" name="availability_slot" id="slot_<%= slot.id %>" value="<%= slot.id %>" required>
                                        <label class="btn btn-outline-primary text-start p-3 border-2 fw-bold" for="slot_<%= slot.id %>">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span>
                                                    <i class="far fa-calendar-alt me-2"></i>
                                                    <%= new Date(slot.start_time).toLocaleDateString() %>
                                                </span>
                                                <span>
                                                    <i class="far fa-clock me-2"></i>
                                                    <%= new Date(slot.start_time).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %> - 
                                                    <%= new Date(slot.end_time).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                                                </span>
                                            </div>
                                        </label>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <div class="alert alert-warning border-0 d-flex align-items-center" role="alert">
                                    <i class="fas fa-exclamation-triangle me-3 fs-4"></i>
                                    <div>
                                        <strong>No slots available.</strong>
                                        <br>This tutor has no free time slots right now.
                                    </div>
                                </div>
                            <% } %>
                        </div>

                        <div class="mb-4">
                            <label for="details" class="form-label fw-bold text-dark">Additional Details (Optional)</label>
                            <textarea name="details" id="details" class="form-control" rows="3" placeholder="Describe specific questions or concepts..."></textarea>
                        </div>

                        <div class="d-grid mt-5">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold shadow-sm" <%= (availability && availability.length > 0) ? '' : 'disabled' %>>
                                Confirm Request
                            </button>
                            <a href="/tutors" class="btn btn-link text-muted mt-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>